<ol reversed class="posts-list" style="counter-reset: start-from {{ (postslistsCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}
  <li class="posts-list__item{% if post.url == url %} posts-list__item-active{% endif %}">
    <a href="{{ post.url | url }}" class="posts-list__link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{post.url}}</code>{% endif %}</a>
    <time class="posts-list__date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
    <div class="posts-list__tags">
    {% for tag in post.data.tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagurl | url }}" class="tag"><span class="tag-box">{{ tag }}</span></a>
      {%- endif -%}
    {% endfor %}
    </div>
  </li>
  {% endfor %}
</ol>